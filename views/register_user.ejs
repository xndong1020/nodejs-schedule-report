<section class="ui center aligned page relaxed grid" style="width: 80vw;">
  <div class="row">
    <h1><i class="fas fa-users"></i> Register User</h1>
  </div>
  <div class="ui hidden divider"></div>
  <div class="four column relaxed row">
    <div class="ui stacked segment eight wide column">
      <% include ./partials/messages_semantic_ui %>
      <form action="/users/register" method="POST" class="ui medium form">
        <div class="field">
          <label for="name" style="text-align:left;">Name</label>
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="field">
          <label for="email" style="text-align:left;">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="field">
            <label for="role" style="text-align:left;">Role</label>
            <select name="role" id="role">
              <option value="">-- Please select --</option>
              <% for(var i=0;i<roleKeys.length;i++) { var selected = typeof selectedIndex !== 'undefined'  && selectedIndex === i ? 'selected' : '' %>
              <option value=<%= roleValues[i] %> <%= selected %> ><%= roleKeys[i] %></option>
              <% } %>
            </select>
          </div>
        <div class="field">
          <label for="password" style="text-align:left;">Create Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="field">
          <label for="password2" style="text-align:left;"
            >Confirm Password</label
          >
          <input
            type="password"
            name="password2"
            id="password2"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <div class="ui hidden divider"></div>
        <button type="submit" class="ui primary button">Register</button>
      </form>
    </div>
  </div>
</section>
