<section class="ui center aligned page" style="margin-left: 1vw; width: 88%;">
  <div class="row">
    <h1><i class="fas fa-users"></i> Tasks Management</h1>
  </div>
  <div class="ui hidden divider"></div>
  <% include ./partials/messages_semantic_ui %>
  <table class="ui stripped celled sortable table">
    <thead>
      <tr>
        <th class="two wide">task_type</th>
        <th class="two wide">primary_device</th>
        <th class="two wide">secondary_device</th>
        <th class="two wide">third_device</th>
        <th class="two wide">Description</th>
        <th class="two wide">Start Date</th>
        <th class="two wide">End Date</th>
        <th class="two wide">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i< results.length; i++) {%>
      <tr>
        <td class="two wide"><%= results[i].task_type %></td>
        <td class="two wide"><%= results[i].primary_device %></td>
        <td class="two wide"><%= results[i].secondary_device %></td>
        <td class="two wide"><%= results[i].third_device %></td>
        <td class="two wide"><%= results[i].text %></td>
        <td class="two wide"><%= results[i].start_date %></td>
        <td class="two wide"><%= results[i].end_date %></td>
        <td class="two wide">
          <div class="ui two buttons">
            <a href="/tasks/edit/<%= results[i]._id %>">
              <button class="ui positive button">Edit</button>
            </a>
            <div class="or"></div>
            <a href="/tasks/delete/<%= results[i]._id %>">
              <form action="/tasks/delete" method="POST" class="delete_task" name="<%= results[i]._id %>">
                <button
                  class="ui negative button"
                  type="submit"
                >
                  Delete
                </button>
              </form>
            </a>
          </div>
        </td>
      </tr>
      <% } %>
    </tbody>
    <tfoot>
      <tr>
        <th></th>
        <th colspan="8">
          <a href="/tasks/create">
            <div class="ui right floated small primary labeled icon button">
              <i class="task icon"></i> Create New Task
            </div>
          </a>
        </th>
      </tr>
    </tfoot>
  </table>
</section>
<div class="ui basic modal">
  <div class="ui icon header">
    <i class="user icon"></i> Deleting An Existing User
  </div>
  <div class="content"><p>Are you sure you want to delete this user?</p></div>
  <div class="actions">
    <div class="ui red basic cancel inverted button">
      <i class="remove icon"></i> No
    </div>
    <div class="ui green ok inverted button">
      <i class="checkmark icon"></i> Yes
    </div>
  </div>
</div>
