<section class="ui center aligned page relaxed grid" style="width: 80%;">
  <div class="row">
    <h1><i class="fas fa-desktop"></i> <%= title %></h1>
  </div>
  <div class="ui hidden divider"></div>
  <div class="eight column relaxed row">
    <div class="ui stacked segment eight wide column">
      <% include ./partials/messages_semantic_ui %>
      <form
        action="/settings/edit_device/<%= deviceName %>"
        method="POST"
        class="ui medium form"
      >
        <div class="field">
          <label for="deviceName">Device Unique Name</label>
          <input
            type="text"
            id="deviceName"
            name="deviceName"
            class="form-control"
            placeholder="Enter A Unique Device Name"
            value="<%= settings && settings.deviceName ? settings.deviceName : '' %>"
          />
        </div>
        <input type="hidden" name="isDeviceApiControlled" id="isDeviceApiControlled" value="<%= settings && settings.isDeviceApiControlled ? settings.isDeviceApiControlled : '' %>">
        <div class="field">
          <label for="deviceNumberAddr">Device Number/Address</label>
          <input
            type="text"
            id="deviceNumberAddr"
            name="deviceNumberAddr"
            class="form-control"
            placeholder="Enter Device Number or Address"
            value="<%= settings && settings.deviceNumberAddr ? settings.deviceNumberAddr : '' %>"
          />
        </div>
        <div class="ui hidden divider"></div>
        <button type="submit" class="ui primary button">Save</button>
      </form>
    </div>
  </div>
</section>
